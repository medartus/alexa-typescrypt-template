{
  "name": "alexa-typescript-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run test:coverage && gulp",
    "deploy": "npm run build && ask deploy",
    "deploy:lambda": "npm run build && ask deploy --target lambda",
    "deploy:local": "ask deploy --target skill --profile local",
    "prettier-format": "prettier --config .prettierrc 'lambda/**/*.ts' --write",
    "eslint:fix": "eslint --fix . --ext .ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "nodemon"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testMatch": [
      "**/*.spec.ts"
    ],
    "coverageDirectory": ".coverage",
    "coveragePathIgnorePatterns": [
      "/__tests__/*",
      "lambda/locales/"
    ]
  },
  "license": "MIT",
  "dependencies": {
    "ask-sdk-core": "^2.8.0",
    "ask-sdk-model": "^1.28.0",
    "i18next": "^19.5.1",
    "i18next-fs-backend": "^1.0.6",
    "lodash": "^4.17.19"
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/i18next-node-fs-backend": "^2.1.0",
    "@types/jest": "^26.0.3",
    "@types/lodash": "^4.14.157",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "eslint": "^7.3.1",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-prettier": "^3.1.4",
    "event-stream": "^4.0.1",
    "express": "^4.17.1",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-typescript": "^5.0.1",
    "jest": "^26.1.0",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
